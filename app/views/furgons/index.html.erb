<h1>Lista furgones</h1>

<table>
  <thead>
    <tr>
      <th>Patente</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @furgones.each do |furgon| %>
      <tr>
        <td><%= furgon.patente %></td>
        <td><%= furgon.estado %></td>
        <td><%= link_to 'Mostrar', furgon %></td>
        <td><%= link_to 'Editar', edit_furgon_path(furgon) %></td>
        <td><%= link_to 'Eliminar', furgon, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar Furgon', new_furgon_path %>
<td><%= link_to 'Atras', controller: 'bienvenida'%></td>
