      <th>Nombre</th>
      <th>Rut</th>
      <th>Nacimiento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= persona.nombre %></td>
        <td><%= persona.rut %></td>
        <td><%= persona.nacimiento %></td>
        <td><%= link_to 'Mostrar', persona %></td>
        <td><%= link_to 'Editar', edit_persona_path(persona) %></td>
        <td><%= link_to 'Eliminar', persona, method: :delete, data: { confirm: 'Â¿estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

