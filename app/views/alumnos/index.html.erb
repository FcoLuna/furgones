<h1>Listing alumnos</h1>

<div class="panel panel-default">
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Horario</th>
      <th>Id apoderado</th>
      <th>Id colegio</th>
      <th>Id furgon integer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alumnos.each do |alumno| %>
      <tr>
        <td><%= alumno.nombre %></td>
        <td><%= alumno.horario %></td>
        <td><%= alumno.id_apoderado %></td>
        <td><%= alumno.id_colegio %></td>
        <td><%= alumno.id_furgon_integer %></td>
        <td><%= link_to 'Mostrar', alumno %></td>
        <td><%= link_to 'Editar', edit_alumno_path(alumno) %></td>
        <td><%= link_to 'Eliminar', alumno, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Agregar Alumno', new_alumno_path %>
<td><%= link_to 'Atras', controller: 'bienvenida'%></td>
