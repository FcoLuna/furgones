<h1>Listing trabajadors</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Tipo</th>
      <th>Sueldo</th>
      <th>Id furgon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trabajadors.each do |trabajador| %>
      <tr>
        <td><%= trabajador.nombre %></td>
        <td><%= trabajador.tipo %></td>
        <td><%= trabajador.sueldo %></td>
        <td><%= trabajador.id_furgon %></td>
        <td><%= link_to 'Show', trabajador %></td>
        <td><%= link_to 'Edit', edit_trabajador_path(trabajador) %></td>
        <td><%= link_to 'Destroy', trabajador, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

