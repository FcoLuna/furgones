<h1>Lista de apoderados</h1>


<div class="panel panel-default">
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Telefono</th>
      <th>Paga</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apoderados.each do |apoderado| %>
      <tr>
        <td><%= apoderado.nombre %></td>
        <td><%= apoderado.telefono %></td>
        <td><%= apoderado.paga %></td>
        <div class="btn-group btn-primary">
          <td><button type="button" class="btn btn-primary"> <%= link_to 'Mostrar', apoderado %></button></td>
          <td><button type="button" class="btn btn-warning"><%= link_to 'Editar', edit_apoderado_path(apoderado) %></button></td>
          <td><button type="button" class="btn btn-danger"><%= link_to 'Eliminar', apoderado, method: :delete, data: { confirm: 'Esta seguro?' } %></button></td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Nuevo Apoderado', new_apoderado_path %>
<td><%= link_to 'Back', controller: 'bienvenida'%></td>
